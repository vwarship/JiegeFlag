<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zaoqibu.jiegeflag" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FullScreenViewActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".FlagThumbnailDisplayActivity"
            android:label="@string/title_activity_flag_thumbnail_display" >
        </activity>
        <activity
            android:name=".FlagActivity"
            android:label="@string/title_activity_flag" >
        </activity>
    </application>

</manifest>
